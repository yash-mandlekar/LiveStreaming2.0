<!DOCTYPE html>
<html ng-app="projectRtc">
  <head>
    <title><%= title %></title>
    <base href="/" />
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="javascripts/adapter.js"></script>
    <script type="text/javascript" src="javascripts/rtcClient.js"></script>

    <script
      type="text/javascript"
      src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"
    ></script>
    <script type="text/javascript" src="javascripts/app.js"></script>
  </head>

  <body>
    <div class="container">
      <h1><%= header %></h1>

      <%= include local-cam %>
    </div>
  </body>
  <script>
    var start = document.querySelector(".start-stop");
    var topbar = document.querySelector(".topbar");
    var bottombar = document.querySelector(".bottombar");
    var h1 = document.querySelector("h1");
    var p = document.querySelector("p");
    var remoteStreams = document.querySelector(".remoteStreams");
    // var close = document.querySelector(".close");
    function myFunction() {
      var x = document.getElementById("localVideo");
      if (x.style.display === "none") {
        x.style.display = "block";
      } else {
        bottombar.style.display = "none";
        topbar.style.display = "none";
        x.style.display = "none";
        h1.style.display = "initial";
        p.style.display = "initial";
        start.style.display = "flex";
        remoteStreams.style.display = "initial";
      }
    }
    start.addEventListener("click", function () {
      var video = document.querySelector("#localVideo");
      bottombar.style.display = "flex";
      topbar.style.display = "flex";
      video.style.display = "block";
      h1.style.display = "none";
      p.style.display = "none";
      start.style.display = "none";
      remoteStreams.style.display = "none";
    });
  </script>
</html>
