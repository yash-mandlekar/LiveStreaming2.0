<div class="localStream" ng-controller="LocalStreamController as localStream">
	<p>
		<%= username %> : <input ng-model="localStream.name" />
	</p>
	<video id="localVideo" muted="muted" autoplay="true"></video>
	<li class="start-stop" ng-click="localStream.toggleCam()">
		<a href>{{ localStream.cameraIsOn ? 'Stop' : 'Go Live' }}</a>
	</li>
